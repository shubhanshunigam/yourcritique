<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= restaurant.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/business/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[dollar]" placeholder="Please enter rating out of 5">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/business">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

